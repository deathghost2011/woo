<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.tlkj.wo.view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/slid_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/titlebar_width"
        android:background="@drawable/bg2"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/slid_menu"
            android:layout_width="@dimen/titlebar_img_width"
            android:layout_height="@dimen/titlebar_img_height"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:padding="5dp"
            android:src="@drawable/ic_menu" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/search2" />

        <ImageView
            android:layout_width="@dimen/titlebar_img_width"
            android:layout_height="@dimen/titlebar_img_height"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="5dp"
            android:padding="5dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/c1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:text="酒"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/c2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/c1"
                    android:gravity="center"
                    android:text="店"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/c3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/c2"
                    android:gravity="center"
                    android:text="群"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/jiudianqun"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignBottom="@id/c3"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:textSize="18sp" />

                <View
                    android:id="@+id/v1"
                    android:layout_width="3dp"
                    android:layout_height="match_parent"
                    android:layout_alignBottom="@id/jiudianqun"
                    android:background="@color/slid_text_check" />
            </RelativeLayout>

            <View
                android:layout_width="30dp"
                android:layout_height="1dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="2dp"
                android:background="@color/gray" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/a1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:text="地"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/a2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/a1"
                    android:gravity="center"
                    android:text="产"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/dichan"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignBottom="@id/a2"
                    android:layout_alignLeft="@id/a2"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:textSize="18sp" />

                <View
                    android:id="@+id/v2"
                    android:layout_width="3dp"
                    android:layout_height="match_parent"
                    android:layout_alignBottom="@id/dichan" />
            </RelativeLayout>

            <View
                android:layout_width="30dp"
                android:layout_height="1dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="2dp"
                android:background="@color/gray" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/a1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:text="商"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/a2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/a1"
                    android:gravity="center"
                    android:text="业"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/shangye"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignBottom="@id/a2"
                    android:layout_alignLeft="@id/a2"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:textSize="18sp" />

                <View
                    android:id="@+id/v3"
                    android:layout_width="3dp"
                    android:layout_height="match_parent"
                    android:layout_alignBottom="@id/shangye" />
            </RelativeLayout>

            <View
                android:layout_width="30dp"
                android:layout_height="1dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="2dp"
                android:background="@color/gray" />
 <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/b1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:text="注"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/b2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/b1"
                    android:gravity="center"
                    android:text="册"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/register"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignBottom="@id/b2"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:textSize="18sp" />

                <View
                    android:id="@+id/v4"
                    android:layout_width="3dp"
                    android:layout_height="match_parent"
                    android:layout_alignBottom="@id/register" />
            </RelativeLayout>

            <View
                android:layout_width="30dp"
                android:layout_height="1dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="2dp"
                android:background="@color/gray" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/a1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:text="登"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/a2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/a1"
                    android:gravity="center"
                    android:text="录"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/login"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignBottom="@id/a2"
                    android:layout_alignLeft="@id/a2"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:textSize="18sp" />

                <View
                    android:id="@+id/v5"
                    android:layout_width="3dp"
                    android:layout_height="match_parent"
                    android:layout_alignBottom="@id/login" />
            </RelativeLayout>

            <View
                android:layout_width="30dp"
                android:layout_height="1dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="2dp"
                android:background="@color/gray" />

        </LinearLayout>

        <GridView
            android:id="@+id/slid_gv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:horizontalSpacing="1dp"
            android:listSelector="@android:color/transparent"
            android:numColumns="2"
            android:stretchMode="columnWidth"
            android:verticalSpacing="1dp" />
    </LinearLayout>

</LinearLayout>